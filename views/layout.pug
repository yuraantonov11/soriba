doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='theme-color' content='#4DA5F4')
        meta(name='csrf-token', content=_csrf)

        if (product)
        meta(property='og:url', content='/product/' + product._id)
        meta(property='og:type', content='article')
        meta(property='og:title', content=product.name)
        meta(property='og:description', content=product.title)
        meta(property='og:image', content=product.image)

        title #{title} - Sansavvy
        link(rel='shortcut icon', href='/favicon.png')
        link(rel='stylesheet', href='/css/main.css')
        link(rel='stylesheet', href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(type="text/css", rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid.min.css")
        link(type="text/css", rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid-theme.min.css")
    body(class=main ? 'main' : 'admin')
        .main.pb-5
            if (main)
                include partials/main-header
                .container.d-flex.justify-content-end.mt-4
                    .topnav
                        .search-container
                            form(action=url)
                                input(type='hidden', name='category', value=categoryQuery)
                                input.pl-3.search-input.text-muted(type='text', placeholder='Search a savvy one...', name='search')
                                button.btn.btn-warning.search-btn(type='submit')
                                    i.fa.fa-search.mr-0.text-white
            else
                include partials/header

            .container.pb-5
                include partials/flash
                block content

            include partials/footer

script(src='https://code.jquery.com/jquery-3.3.1.min.js', crossorigin='anonymous', integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=')
